<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:background="@color/colorBackground_one"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/rl_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80dp"
        android:layout_centerInParent="true">

        <ImageView
            android:id="@+id/image_view_avilaksh"
            android:layout_width="180dp"
            android:layout_height="40dp"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:src="@drawable/icn_avilaksh"/>

        <RelativeLayout
            android:id="@+id/rl_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true"
            android:visibility="gone"
            android:layout_marginTop="5dp"
            android:layout_below="@id/image_view_avilaksh">

            <LinearLayout
                android:id="@+id/ll_1"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/et_phn_no"
                    android:hint="PHONE NUMBER"
                    android:fontFamily="sans-serif-light"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:textColor="@color/colorWhite"
                    android:background="@android:color/transparent"
                    android:textColorHint="@color/colorWhite"
                    android:drawableLeft="@drawable/icn_phone_no"
                    android:drawablePadding="15dp"
                    android:textSize="15dp"
                    android:inputType="phone"
                    />

                <EditText
                    android:id="@+id/et_username"
                    android:hint="USERNAME"
                    android:fontFamily="sans-serif-light"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:textColor="@color/colorWhite"
                    android:background="@android:color/transparent"
                    android:textColorHint="@color/colorWhite"
                    android:drawableLeft="@drawable/icn_username"
                    android:drawablePadding="15dp"
                    android:textSize="15dp"
                     />
                <EditText
                    android:id="@+id/et_password"
                    android:hint="PASSWORD"
                    android:inputType="textPassword"
                    android:fontFamily="sans-serif-light"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:textColor="@color/colorWhite"
                    android:background="@android:color/transparent"
                    android:textColorHint="@color/colorWhite"
                    android:drawableLeft="@drawable/icn_password"
                    android:drawablePadding="15dp"
                    android:textSize="15dp"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp"
                    android:layout_weight="2">

                    <TextView
                        android:id="@+id/tv_login_register"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:background="@android:color/transparent"
                        android:textColor="@color/colorWhite"
                        android:text="Register"
                        android:layout_weight="1"
                        android:textAllCaps="true"
                        android:fontFamily="sans-serif-condensed"
                        android:textSize="12sp" />
                    <TextView
                        android:id="@+id/tv_login_lost_passwrd"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:layout_weight="1"
                        android:textColor="@color/colorWhite"
                        android:text="Forgot password?"
                        android:textAllCaps="true"
                        android:fontFamily="sans-serif-condensed"
                        android:textSize="12sp" />
                </LinearLayout>

                <Button
                    android:id="@+id/btn_login"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:layout_marginBottom="10dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="40dp"
                    android:background="@drawable/icn_background"
                    android:elevation="5dp"
                    android:shadowColor="@color/cardview_shadow_start_color"
                    android:text="Login"
                    android:textAllCaps="true"
                    android:fontFamily="sans-serif-light"
                    android:textColor="@android:color/white"
                    android:textSize="16sp" />

            </LinearLayout>

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>